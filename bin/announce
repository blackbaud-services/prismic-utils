#!/bin/bash

set -eux

PACKAGE_VERSION=$(cat package.json \
  | grep version \
  | head -1 \
  | awk -F: '{ print $2 }' \
  | sed 's/[",]//g' \
  | tr -d '[[:space:]]')

curl \
${TEAMS_WEBHOOK_URL} \
-X POST \
-H 'Content-Type: application/json' \
-d @/dev/stdin <<JSON
{
  "text": "Prismic Utils version ${PACKAGE_VERSION} released!"
}
JSON

curl \
${SLACK_WEBHOOK_URL} \
-X POST \
-H 'Content-Type: application/json' \
-d @/dev/stdin <<JSON
{
  "text": "Prismic Utils version ${PACKAGE_VERSION} released :tada:",
  "channel": "#edh-profs-dev",
  "username": "Prismic Utils",
  "icon_emoji": ":${SLACK_ANNOUNCE_EMOJI}:"
}
JSON
